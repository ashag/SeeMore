<!DOCTYPE html>
<html>
  <head>
    <title>FeedHunter</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= link_to(image_tag('raptorheaderblackborder.jpg', :alt => "logo", :title => "Welcome"),"/") %>
    <nav class="navbar navbar-default" role="navigation">

  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    
  </div>


  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <!-- this clause exists to easily check for a current user once current user is implemented -->
      <% if false %>
        <!-- should eventually link to sign up path -->
        <li class="active"><%= link_to 'Sign Up', root_path %></li>
        <!-- should eventually link to sign in path -->
        <li><%= link_to 'Sign In', root_path %></li>
        <!-- should eventually link to the user show page -->
      <% else %>
        <li class="active"><%= link_to 'Feed', root_path %></li>
        <li><%= link_to 'Predator Profile', root_path %></li>
        <!-- should eventually link to the sign out path -->
        <li><%= link_to 'Sign Out', root_path %></li>
      <% end %>
    </ul>

    <!-- <form class="navbar-form navbar-left" role="search"> -->
    <%= form_tag search_path, :class =>"navbar-form navbar-right", :method => 'post' do %>
      <div class="form-group">
        <input type="text" name="search" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Hunt for Prey</button>
    <% end %>

  </div><!-- /.navbar-collapse -->
</nav>
  
  <%= yield %>

  </body>
</html>